@using System.Globalization;
@model IEnumerable<AccountingBookDataListModels>
@{
    ViewBag.Title = "AccountBookForAjax";
    Layout = null;
}

<div class="col-md-12">
    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
        </tr>

        @for (int i = 0; i <= Model.Count() - 1; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@(Model.ToList()[i].type)</td>
                <td>@((Model.ToList()[i].Date).ToString("yyyy-MM-dd"))</td>
                @if (i + 1 == 3)
                {
                    <td>@((Model.ToList()[i].money.ToString("N", CultureInfo.CreateSpecificCulture("fr-FR"))))</td>
                }
                else
                {
                    <td>@((Model.ToList()[i].money.ToString("N0")))</td>
                }
            </tr>
        }
    </table>
</div>


@model List<AccountingBook.Models.AccountingBookDataListModels>
@{ 
    var i = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th>類別</th>
                <th>日期</th>
                <th>金額</th>
            </tr>
            @foreach (var m in Model)
            {

                i++;
                <tr>
                    <td>@i</td>
                    <td>@(m.type)</td>
                    <td>@m.Date.ToString("yyyy-MM-dd")</td>
                    <td>@m.money.ToString("N0")</td>
                </tr>
            }

@using AccountingBook.Helper;

@model List<AccountingBook.Models.AccountingBookDataListModels>

@{ 
    var i = 0;
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>#</th>
                <th nowrap="nowrap">類別</th>
                <th nowrap="nowrap">日期</th>
                <th>金額</th>
                <th nowrap="nowrap">備註</th>
            </tr>
            @foreach (var m in Model)
            {

                //i++;
                <tr>
                    <td>@(++i)</td>
                    <td>@Html.AccountingType(m.type)</td>
                    <td nowrap="nowrap">@m.Date.ToString("yyyy-MM-dd")</td>
                    <td>@m.money.ToString("#,###")</td>    @*原本寫法 @m.money.ToString("N0")*@
                    <td nowrap="nowrap">@m.Remark</td>
                </tr>
            }
